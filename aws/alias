[toplevel]

# MINE
rit = !f() { aws ec2 run-instances --launch-template LaunchTemplateName=$1 ; }; f
ti = !f() { aws ec2 terminate-instances --instance-ids "${1}"; }; f
# wtf = !f() { echo wtf }; f


ri = running-instances
############################### cloudformation  #################################
cf = cloudformation

list-stacks = cf list-stacks --query 'StackSummaries[?DeletionTime==None].{Name: StackName, Status:StackStatus}'

############################### EC2  #################################

